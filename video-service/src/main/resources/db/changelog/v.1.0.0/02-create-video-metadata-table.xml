<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-video-metadata-table" author="kudzip">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="video"/>
        </preConditions>

        <createTable tableName="video_metadata">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="video_id" type="uuid">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="duration" type="int4">
                <constraints nullable="true"/>
            </column>
            <column name="file_size" type="int8">
                <constraints nullable="true"/>
            </column>
            <column name="bitrate" type="int8">
                <constraints nullable="true"/>
            </column>
            <column name="resolution" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="timestamptz" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamptz" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="video_metadata"
                baseColumnNames="video_id"
                constraintName="fk_video_metadata_video"
                referencedTableName="video"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>

