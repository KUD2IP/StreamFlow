<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-video-quality-table" author="kudzip">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="video"/>
        </preConditions>

        <createTable tableName="video_quality">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="video_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="quality_level" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="storage_path" type="varchar(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="file_size" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="int4">
                <constraints nullable="false"/>
            </column>
            <column name="bitrate_video" type="int4">
                <constraints nullable="true"/>
            </column>
            <column name="bitrate_audio" type="int4">
                <constraints nullable="true"/>
            </column>
            <column name="resolution" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamptz" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="int8" defaultValue="0"/>
        </createTable>

        <addUniqueConstraint tableName="video_quality"
                             columnNames="video_id, quality_level"
                             constraintName="uk_video_quality_video_level"/>

        <createIndex tableName="video_quality" indexName="idx_video_quality_video_id">
            <column name="video_id"/>
        </createIndex>

        <createIndex tableName="video_quality" indexName="idx_video_quality_level">
            <column name="quality_level"/>
        </createIndex>

        <addForeignKeyConstraint
                baseTableName="video_quality"
                baseColumnNames="video_id"
                constraintName="fk_video_quality_video"
                referencedTableName="video"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <!-- Check constraint for quality_level -->
        <sql>
            ALTER TABLE video_quality ADD CONSTRAINT chk_video_quality_level
            CHECK (quality_level IN ('P1080', 'P720', 'P480', 'P360', 'P240'));
        </sql>
    </changeSet>
</databaseChangeLog>

