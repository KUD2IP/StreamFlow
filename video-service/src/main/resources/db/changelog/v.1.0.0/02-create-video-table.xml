<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-video-table" author="kudzip">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="users"/>
        </preConditions>

        <createTable tableName="video">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="visibility" type="varchar(50)" defaultValue="PUBLIC">
                <constraints nullable="false"/>
            </column>
            <column name="thumbnail_path" type="varchar(1000)">
                <constraints nullable="true"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(50)" defaultValue="UPLOADING">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamptz" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="int8" defaultValue="0"/>
        </createTable>

        <createIndex tableName="video" indexName="idx_video_user_id">
            <column name="user_id"/>
        </createIndex>

        <createIndex tableName="video" indexName="idx_video_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="video" indexName="idx_video_visibility">
            <column name="visibility"/>
        </createIndex>

        <createIndex tableName="video" indexName="idx_video_created_at">
            <column name="created_at"/>
        </createIndex>

        <createIndex tableName="video" indexName="idx_video_title">
            <column name="title"/>
        </createIndex>

        <addForeignKeyConstraint
                baseTableName="video"
                baseColumnNames="user_id"
                constraintName="fk_video_user"
                referencedTableName="users"
                referencedColumnNames="id"/>

        <!-- Check constraints for ENUM-like validation -->
        <sql>
            ALTER TABLE video ADD CONSTRAINT chk_video_status
            CHECK (status IN ('UPLOADING', 'PROCESSING', 'READY', 'FAILED'));
        </sql>
        <sql>
            ALTER TABLE video ADD CONSTRAINT chk_video_visibility
            CHECK (visibility IN ('PUBLIC', 'PRIVATE', 'SUBSCRIBERS'));
        </sql>
    </changeSet>
</databaseChangeLog>

